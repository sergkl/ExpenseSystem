<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/Images/Favicon.ico")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Styles/jquery.treeview.css")" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/ExpenseSystem.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/jquery-ui-1.8.10.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.10.custom.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.treeview.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ExpenseSystem/Global.js")" type="text/javascript"></script>
    @{ Html.EnableClientValidation(); }
    @RenderSection("HeadContent", false)
</head>
<body>
    <div id="headerContent" class="siteColor">
        <h2>Expense tracking system</h2>
        @Html.ActionLink("Home", "GetTagsTree", "Tag")
        @Html.ActionLink("Report", "Index", "Report")
        <span id="loadingArea" class="hidden"><img src="@Url.Content("~/Content/Images/Loading.gif")" alt="Loading" /></span>
        @Html.ActionLink("SignOut", "SignOut", "Account", null, new { @id = "logoutLink"})
        <span id="welcomeArea">Welcome <b>@ViewData["UserName"]</b></span>
    </div>
    <div id="mainContent">
        @RenderSection("BodyContent", true)
    </div>
</body>
</html>
